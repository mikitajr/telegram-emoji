{
  "name": "telegram-emoji",
  "version": "1.0.0",
  "displayName": "Telegram Emoji",
  "description": "Preview Telegram premium custom emojis inline in your code",
  "publisher": "mikitajr",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikitajr/telegram-emoji"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization"
  ],
  "keywords": [
    "telegram",
    "emoji",
    "preview",
    "sticker"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Telegram Emoji Preview",
      "properties": {
        "telegramEmojiPreview.botToken": {
          "type": "string",
          "default": "",
          "description": "Telegram Bot API token for fetching custom emojis"
        },
        "telegramEmojiPreview.enableInlinePreview": {
          "type": "boolean",
          "default": true,
          "description": "Show inline emoji preview next to the tag"
        }
      }
    },
    "commands": [
      {
        "command": "telegramEmojiPreview.setToken",
        "title": "Telegram Emoji: Set Bot Token"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
