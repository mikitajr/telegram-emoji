{
  "name": "telegram-emoji-preview",
  "displayName": "Telegram Emoji Preview",
  "description": "Preview Telegram premium custom emojis inline in your code",
  "version": "0.1.0",
  "publisher": "mikitajr",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "telegram",
    "emoji",
    "preview",
    "sticker",
    "inline"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Telegram Emoji Preview",
      "properties": {
        "telegramEmojiPreview.botToken": {
          "type": "string",
          "default": "",
          "description": "Telegram Bot API token for fetching custom emojis"
        },
        "telegramEmojiPreview.previewSize": {
          "type": "number",
          "default": 20,
          "minimum": 12,
          "maximum": 64,
          "description": "Size of inline emoji preview in pixels"
        },
        "telegramEmojiPreview.hoverPreviewSize": {
          "type": "number",
          "default": 128,
          "minimum": 64,
          "maximum": 512,
          "description": "Size of emoji preview on hover in pixels"
        },
        "telegramEmojiPreview.enableInlinePreview": {
          "type": "boolean",
          "default": true,
          "description": "Show inline emoji preview next to the tag"
        },
        "telegramEmojiPreview.cacheExpiration": {
          "type": "number",
          "default": 86400,
          "description": "Cache expiration time in seconds (default: 24 hours)"
        }
      }
    },
    "commands": [
      {
        "command": "telegramEmojiPreview.clearCache",
        "title": "Telegram Emoji: Clear Cache"
      },
      {
        "command": "telegramEmojiPreview.refresh",
        "title": "Telegram Emoji: Refresh Previews"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mikitajr/telegram-emoji-view"
  },
  "license": "MIT"
}
